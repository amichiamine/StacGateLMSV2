# Configuration StacGateLMS React/Node.js
# Copiez ce fichier vers .env et modifiez les valeurs

# Environnement
NODE_ENV=development
PORT=5000
VITE_PORT=3000

# Base de données PostgreSQL
DATABASE_URL=postgresql://stacgate:stacgate123@localhost:5433/stacgatelms

# Application
APP_NAME=StacGateLMS
APP_URL=http://localhost:5000

# Sécurité (générez des clés uniques)
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here
CSRF_SECRET=your-csrf-secret-here

# Administrateur
ADMIN_EMAIL=admin@stacgate.com
ADMIN_PASSWORD=admin123

# Fonctionnalités
INSTALL_DEMO_DATA=true

# Frontend (Vite)
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=StacGateLMS

# Upload et stockage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logs et debug
LOG_LEVEL=info
DEBUG_MODE=false

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
CACHE_TTL=3600
REDIS_URL=

# Email (optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localhost

# Analytics (optionnel)
GOOGLE_ANALYTICS_ID=
MATOMO_URL=
MATOMO_SITE_ID=