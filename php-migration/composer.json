{
    "name": "stacgate/lms-php",
    "description": "StacGateLMS - Plateforme d'apprentissage moderne en PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "StacGate Team",
            "email": "contact@stacgate.com"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_pgsql": "*",
        "ext-pdo_sqlite": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-session": "*",
        "ext-openssl": "*",
        "ext-filter": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "StacGate\\Core\\": "core/",
            "StacGate\\Services\\": "core/services/",
            "StacGate\\API\\": "api/"
        },
        "files": [
            "config/config.php",
            "core/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "StacGate\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 core/ api/",
        "cs-fix": "phpcbf --standard=PSR12 core/ api/",
        "analyse": "phpstan analyse core/ api/ --level=5",
        "install-dev": [
            "@composer install",
            "php install/create-env.php",
            "php install/check-requirements.php"
        ],
        "post-install-cmd": [
            "php install/post-install.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}